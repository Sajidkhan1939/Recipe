@{
    ViewBag.Title = "Home Page";
}

<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="~/ExternalFile/Index.css" rel="stylesheet" />
    <title>Recipe</title>
</head>
<body>
    <div class="first">
        <div class="left">
        </div>
    </div>    
    <div class="second">
        <div class="top"></div>
        <div class="container recipe-edit-container">
            <div class="col-8">
                <div class="card mt-4">
                    <div class="card-header"><h3>Add New Recipe</h3></div>
                    <div class="card-body">
                        <form>
                            <input type="hidden" id="custId" name="custId" value="0">
                            <div class="mb-4">
                                <input type="text" class="form-control" id="title_input" placeholder="Title of the Recipe">
                                <div id="validatetitle" class="invalid-feedback">Please enter recipe title.</div>
                            </div>
                            <div class="mb-3">
                                <textarea class="form-control" id="recipe_ingrediants" rows="5"></textarea>
                            </div>
                            <div class="invalid-feedback" id="validateingrediants">Please enter a recipe Ingredia.</div>
                            <button id="cancel" type="submit" class="btn btn-light">Cancel Recipe</button>
                            <button type="button" class="btn btn-light" id="save" onclick="addrecipe()">Submit Recipe</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row view-all-recipe-container" style="display: none;">
                <h2 class="view-all-recipe-container-heading">Recipe List Empty</h2>
            </div>
        </div>
    </div>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="~/ExternalFile/Index.js"></script>
</body>
</html>